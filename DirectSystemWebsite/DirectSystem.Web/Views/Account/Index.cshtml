@using DirectSystem.Web.Models;
@model AccountModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12" style="margin-top:20px;">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        @{
            var error = TempData["Error"];
            if (error != null)
            {
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title">Error message</h3>
                    </div>
                    <div class="panel-body">@error</div>
                </div>
            }
        }
    </div>
    <div class="col-lg-3">

    </div>
</div>
<div class="col-lg-12" style="margin-top:20px;">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="col-lg-12 form-group">
                <div class="col-lg-4">
                    @Html.DisplayNameFor(m => Model.UserName)
                </div>
                <div class="col-lg-6">
                    @Html.TextBoxFor(m => Model.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-12 form-group">
                <div class="col-lg-4">
                    @Html.DisplayNameFor(m => Model.Password)
                </div>
                <div class="col-lg-6">
                    @Html.PasswordFor(m => Model.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-12 form-group">
                <div class="col-lg-4">
                    <input type="submit" class="btn btn-lg btn-primary" id="btnLogin" value="Login" />
                </div>
            </div>
        }

    </div>
    <div class="col-lg-3">

    </div>
</div>
