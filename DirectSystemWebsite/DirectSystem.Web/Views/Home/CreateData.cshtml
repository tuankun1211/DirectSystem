@using DirectSystem.Web.Models;
@model EntryDataInitModel
@{
    ViewBag.Title = "CreateData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12" style="margin-top:20px;">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        @using (Html.BeginForm("InitCreateData", "Home", FormMethod.Post))
        {
          <div class="col-lg-12 form-group">
                <div class="col-lg-2">
                    @Html.DisplayNameFor(m => Model.InitDateTime)
                </div>
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => Model.InitDateTime, new {@class="form-control",@readonly="readonly" })
                </div>
            </div>
            <div class="col-lg-12 form-group">
                <div class="col-lg-2">
                    @Html.DisplayNameFor(m => Model.IsPromotion)
                </div>
                <div class="col-lg-4">
                    @Html.CheckBoxFor(m => Model.IsPromotion)
                </div>
            </div>
            <div class="col-lg-12 form-group">
                <div class="col-lg-2">                   
                </div>
                <div class="col-lg-4">
                  <input type="submit" class="btn-primary" value="Create"/>
                </div>
            </div>  
        }
            
    </div>
    <div class="col-lg-2"></div>
</div>
